{
    "compilerOptions" : {
        "experimentalDecorators"    : true,

        "noImplicitThis"            : true,
        "strictBindCallApply"       : true,

        "jsx"                       : "react",
        "jsxFactory"                : "TextJSX.createElement",
        "jsxFragmentFactory"        : "TextJSX.Fragment",

        "target"                    : "es2017",
        "sourceMap"                 : false,

        "lib"                       : [
            "esnext",
            "dom"
        ],
        "allowJs": true,

        "module"                    : "ESNext",
        "moduleResolution"          : "node",

        "allowSyntheticDefaultImports"    : true
    },

    "include" : [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
}
